{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "baseUrl": "src",
    "skipLibCheck": true,
    "paths": {
      "components/*": ["components/*"],
      "mutations/*": ["actions/*"],
      "constants": ["constants"]
    },
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown"
    ]
  },
  "include": [
    "./src/server/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.d.ts"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}